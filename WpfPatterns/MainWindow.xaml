<mah:MetroWindow x:Class="WpfPatterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:controls="clr-namespace:WpfPatterns.Controls"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="800"
        WindowTransitionsEnabled="True"
        Topmost="True"
        SaveWindowPosition="True"
        UseNoneWindowStyle="False"
        IsWindowDraggable="True"
        >
    <TabControl TabStripPlacement="Left">

        <TabItem Header="Animate on DataTrigger" >
            <controls:AnimateOnDataTrigger />
        </TabItem>

        <TabItem Header="Animate on EventTrigger" >
            <controls:AnimateOnEventTrigger/>
        </TabItem>

    </TabControl>

</mah:MetroWindow>
